package com.tacohen.killbots.Logic;

import android.util.Pair;

public class MoveRobots {
	
	int playerXLocation = CurrentPlayerLocation.getPlayerXLocation();
	int playerYLocation = CurrentPlayerLocation.getPlayerYLocation();
	
	public MoveRobots(){
		super();
	}
	
	public Pair<Integer,Integer> desiredRobotLocation(int robotXLocation, int robotYLocation){
		int xValueDifference = Math.abs(robotXLocation-playerXLocation);
		int yValueDifference = Math.abs(robotYLocation-playerYLocation);
		
		//TODO: PLACEHOLDER VALUES!
		int xValue = 0;
		int yValue = 0;
		return Pair.create(xValue, yValue);
		
	}

}
